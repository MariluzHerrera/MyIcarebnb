  <% if rooms.empty? %>

    <div class="row">
      <div class="col-12 col-lg-10 offset-lg-1">
        <div class="card mt-4">
          <div class="card-header">
            <h4>Your Rooms<i class="fas fa-bed main-colour ml-3 mt-2"></i></h4>
          </div>
          <div class="card-body">
            <p class="card-text">You don't have any rooms at the moment. Click on 'Add a room' to add your first one.</p>
          </div>
        </div>
      </div>
    </div>

    <% else %>

    <div class="row">
      <div class="col-12 col-lg-10 offset-lg-1">
        <div class="card mt-4">
          <div class="card-header">
            <h4 class="float-left">Your Rooms<i class="fas fa-bed main-colour ml-3 mt-2"></i></h4><%= link_to "Add a room", new_room_path, class: "btn btn-secondary alata float-right w-25 btn-resize" %>
          </div>

          <% counter = 1 %>
          <% rooms.each do |room| %>

            <div class="card-body">
              <div class="dash_content w-100">
                <%= cl_image_tag room.photo_url_or_default, alt: room.address, class: "max_image_size hidden-small mr-5" %>
                <div id="table_center">
                  <h5 class="card-title">
                  <%= link_to room_path(room), class:"card-title" do %>
                    <%= room.beds %> <%= room.beds == 1 ? 'Bed' : 'Beds' %> - <%= room.address  %>
                  <% end %>
                  </h5>
                  <!-- <i class="fas fa-bed mr-2 my-2 main-colour"><span class="card-detail-text">&nbsp <%#= room.beds %></span></i> -->
                  <i class="fas fa-shower mt-2 mb-4 main-colour"><span class="card-detail-text">&nbsp <%= room.facilities %> facilities</span></i>
                  <br><i class="mr-2"><span class="card-detail-text btn btn-sm btn-warning card-button"><%= link_to "Edit", edit_room_path(room) %></span></i>
                  <i class="mr-2"><span class="card-detail-text btn btn-sm btn-danger card-button"><%= link_to "Delete", room_path(room), method: :delete, data: {confirm: "Are you sure?"} %></span></i>
                </div>
              </div>
            </div>

            <% if counter < rooms.length %>
              <hr style="margin:0;">
            <% counter += 1 %>
            <% end %>

          <% end %>
        </div>
      </div>

    </div>

  <% end %>
