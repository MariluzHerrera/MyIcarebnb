<h1>Add a new room</h1>

<br>

<%= simple_form_for(@room) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :postcode %>
    <%= f.input :adult_space %>
    <%= f.input :child_space %>
    <%= f.input :infant_space %>
    <%= f.input :beds %>
    <%= f.input :facilities, as: :radio_buttons, collection: ['Shared', 'Private'] %>
    <%= f.input :max_stay_length %>
    <%= f.input :image_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
  </div>
<% end %>

