<div class="container">
  <div class="row">
    <div class="col-12 mt-5 mb-4 col-lg-6 offset-lg-3">
      <h2>Forgot your password?</h2>
    </div>
    <div class="col-12 col-sm-10 offset-sm-1 col-lg-6 offset-lg-3">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>
    </div>
    <div class="col-12 col-12 mt-3 mb-4 col-lg-6 offset-lg-3">
      <div class="form-actions btn btn-light btn-sm btn-outline-dark">
        <%= f.button :submit, "Send me reset password instructions" %>
      </div>
    <% end %>
    </div>
    <div class="col-12 col-12 mt-2 col-lg-6 offset-lg-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
