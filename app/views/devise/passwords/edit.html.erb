<div class="container">
  <div class="row">
    <div class="col-12 mt-5 mb-4 col-lg-6 offset-lg-3">
      <h2>Change your password</h2>
    </div>
    <div class="col-12 col-sm-10 offset-sm-1 col-lg-6 offset-lg-3">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>
    </div>
    <div class="col-12 col-sm-10 offset-sm-1 mt-3 mb-4 col-lg-6 offset-lg-3">
      <div class="form-actions btn btn-light btn-sm btn-outline-secondary">
        <%= f.button :submit, "Change my password" %>
      </div>
    <% end %>
    </div>
    <div class="col-12 col-sm-10 offset-sm-1 mt-2 col-lg-6 offset-lg-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
