<div class="container">
  <div class="row">
    <div class="col-12 col-sm-10 offset-sm-1 mt-5 mb-4 col-lg-6 offset-lg-3">
      <div class="mt-4 p-5 box-design">
        <h1>Log In</h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions btn btn-light btn-outline-secondary my-3 w-100" style="font-family;">
          <%= f.button :submit, "Log in" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
        <%#=# image_tag 'undraw_Login_v483.svg', class: "ollie-image2 w-50 float-right" %>
      </div>
    </div>
  </div>
</div>
