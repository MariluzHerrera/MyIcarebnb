<div class="container">
  <div class="row">
    <div class="col-12 mt-5 mb-4 col-lg-6 offset-lg-3">
      <h2>Log in</h2>
    </div>
    <div class="col-12 col-sm-10 offset-sm-1 col-lg-6 offset-lg-3">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
    <div class="col-12 col-12 mt-3 mb-4 col-lg-6 offset-lg-3">
      <div class="form-actions btn btn-light btn-sm btn-outline-dark">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
    </div>
    <div class="col-12 col-12 mt-2 col-lg-6 offset-lg-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<%= image_tag 'undraw_Login_v483.svg', class: "ollie-image2" %>
