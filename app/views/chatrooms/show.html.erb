<% if @chatroom.sender != current_user %>
<% @interlocutor = @chatroom.sender %>
 <% else %>
<% @interlocutor = @chatroom.recipient %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-sm-3 col-md-2" id="sidebar-background" style="background-image: url(<%= asset_path "messages.png" %>);">
      <% @chatrooms.each do |chatroom| %>
        <%= link_to chatroom_path(chatroom) do %>
          <p class="chat-list my-3 alata text-center"><%= "Chat with #{current_user == chatroom.sender ? chatroom.recipient.first_name.capitalize  : chatroom.sender.first_name.capitalize}" %></p>
        <% end %>
      <% end %>
    </div>
    <div class="col-12 col-sm-9 col-md-10 bg-light" style="height:100vh;">
      <div class="container-fluid">
        <div>
          <h4 class="mb-4 mt-5 text-center">
            <% if @interlocutor.avatar_url_or_default %>

              <%= cl_image_tag("juno-jo-nwdPxI1h4NQ-unsplash_rwvs9h", crop: :fill, class: "chat-img mr-2" )%>
              <%= image_tag @interlocutor.avatar_url_or_default, class: "chat-img mr-2" %>
            <% end %>
            <%= "iCareChat with #{@interlocutor.first_name} #{@interlocutor.surname}" %>
          </h4>
        </div>
        <div class="chat-text-input chatbox-input" style="display:flex;">
          <%= simple_form_for([@chatroom, @chat]) do |f| %>
            <%= f.input :message, placeholder: "Type your message...", label: false %>
            <%= f.submit 'Send', class: 'send_btn mb-4' %>
          <% end %>
        </div>
        <div class="container">
          <!-- FIGURE OUT HOW TO SORT CHATS SO MOST RECENT ARE FIRST -->
          <% @chatroom.chats.reverse.each do |chat| %>
            <div class="<%= 'd-flex justify-content-end' if chat.user == current_user %>">
              <div class="d-inline-flex pb-1 chatbox">
                <div class="chat-bubble <%= 'chat-bubble-right' if chat.user == current_user %>">
                  <p class="chat-details"><%= chat.user.email %></p>
                  <p style="font-size: 1.1em;" class="m-0 chat-message <%= 'color-blue' if chat.user == current_user %>"><%= chat.message %></p>
                </div>
              </div>
            </div>
              <div class="<%= 'd-flex justify-content-end' if chat.user == current_user %>">
              <% difference = (Time.now - chat.created_at)/60 %>
              <% rounded_difference_seconds = (Time.now - chat.created_at).round %>
              <% rounded_difference = difference.round %>
              <% if rounded_difference_seconds == 1 %>
              <p class="chat-time mr-2 mt-2"><%= rounded_difference_seconds %> second ago</p>
              <% elsif rounded_difference_seconds < 60 %>
              <p class="chat-time mr-2 mt-2"><%= rounded_difference_seconds %> seconds ago</p>
              <% elsif rounded_difference == 1 %>
              <p class="chat-time mr-2 mt-2"><%= rounded_difference %> minute ago</p>
              <% elsif rounded_difference < 60 %>
              <p class="chat-time mr-2 mt-2"><%= rounded_difference %> minutes ago</p>
              <% else %>
              <p class="chat-time mr-2 mt-4" style="font-size: 0.8em;"><%= chat.created_at.strftime('%d %b %Y %l:%M %p') %></p>

              <% end %>

              <% if chat.read && current_user.id == chat.user.id %>
                <p class="read-status alata mt-1"><%= "Read" %></p>
              <% elsif chat.read != true && current_user.id == chat.user.id %>
                <p class="read-status alata mt-1"><%= "Unread" %></p>
              <% end %>
              </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
    var channel = pusher.subscribe('chat-channel');
    channel.bind('message-created', (data) => {
      let message = data.message;
      let color = '';
      let flexEnd = '';
      let bubbleRight = '';
      if (data.current_user === data.sender_id ) {
        color = 'color-blue';
        flexEnd = 'd-flex justify-content-end';
        bubbleRight = 'chat-bubble-right';
      }
      document.getElementById('message-container').insertAdjacentHTML('beforeend', `
        <div class="${flexEnd}">
          <div class="d-inline-flex p-2 chatbox">
            <div class="chat-bubble ${bubbleRight}">
              <p class="chat-details">${data.timestamp}</p>
              <p class="chat-details">${data.user_email}</p>
              <p class="m-0 chat-message ${color}">${message}</p>
            </div>
          </div>
        </div>
      `);
      document.getElementById('chat_message').value = "";
      document.getElementById('submit_message').disabled = false;
    });
</script>
