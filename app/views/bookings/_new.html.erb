<% if params[:range_dates] %>
  <%  range_dates_start = params[:range_dates][0,10] %>
  <%  range_dates_end = params[:range_dates][-10,10] %>
<% else  %>
  <%  range_dates_start = Time.now.strftime("%Y-%m-%d") %>
  <%  range_dates_end = (Time.now+86400).strftime("%Y-%m-%d") %>
<% end %>

