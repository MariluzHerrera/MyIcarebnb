<div class="container">
  <div class="jumbotron mt-5 p-5 box-design" style="background-color: white; ">
    <div class="row">
      <div class="col-12">
        <h2 style="color:#3F3D56;">Booking Details for <%= @booking.room.beds %> <%= @booking.room.beds == 1 ? 'Bed' : 'Beds' %> at <%= @booking.room.address %></h2>
        <hr class="my-4">
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-5">
        <i class="fas fa-map-marker-alt mr-4 mt-2 mb-4 main-colour" style="font-size:1.2em;"><span class="card-detail-text">&nbsp 0.8 miles away</span></i><i class="fas fa-shower my-2 main-colour" style="font-size:1.2em;"><span class="card-detail-text">&nbsp <%= @booking.room.facilities %> facilities</span></i>
        <p><strong style="color:#3F3D56;">Host Name:</strong> <%= @booking.room.user.first_name %> <%= @booking.room.user.surname %></p>
        <p><strong style="color:#3F3D56;">Booking Confirmed:</strong> <%= @booking.confirmed ? "Yes" : "No - Awaiting Response From #{@booking.room.user.first_name}." %></p>
<!--         <p><strong>Start Date:</strong> <%= @booking.start_date %></p>
        <p><strong>End Date:</strong> <%= @booking.end_date %></p> -->
        <p><strong style="color:#3F3D56;">Number Of Adults:</strong> <%= @booking.number_of_adults %></p>
        <p><strong style="color:#3F3D56;">Number Of Children:</strong> <%= @booking.number_of_children %></p>
        <p class="lead my-4"> <%= @booking.room.description %></p>
        <div class="form-actions btn btn-secondary">
          <%= link_to "Back to dashboard", dashboard_path, class: "nav-link" %>
        </div>
      </div>
      <div class="col-12 col-md-7">
        <div id="map" style="width: 100%; height: 300px; marker-color: red; margin-bottom: 20px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        <%= cl_image_tag @booking.room.photo_url_or_default, alt: @booking.room.address, style: 'width:100%;max-height:315px;object-fit:cover;margin-bottom:50px;border-radius:20px;' %>
      </div>
    </div>
  </div>
</div>



