<div class="container">
  <div class="jumbotron mt-5 p-5 box-design" style="background-color: white; ">
    <div class="row">
      <div class="col-12">
        <h3 style="color:#3F3D56;">Booking Details for <%= @booking.room.beds %> <%= @booking.room.beds == 1 ? 'Bed' : 'Beds' %> at <%= @booking.room.address %></h3>
        <hr class="my-4">
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-lg-5">
        <i class="fas fa-map-marker-alt mr-4 mt-2 mb-4 main-colour" style="font-size:1.2em;"><span class="card-detail-text">&nbsp 0.8 miles away</span></i><i class="fas fa-shower my-2 main-colour" style="font-size:1.2em;"><span class="card-detail-text">&nbsp <%= @booking.room.facilities %> facilities</span></i>
        <!-- <div style="background-color: #F2F2F2; padding: 10px 30px; border-radius: 15px;"> -->
          <p class="my-1"><strong style="color:#3F3D56;">Host Name:</strong> <%= @booking.room.user.first_name %> <%= @booking.room.user.surname %></p>
          <p class="my-1"><strong style="color:#3F3D56;">Booking Status:</strong> <% if @booking.confirmed %>
            Confirmed
            <% elsif @booking.declined %>
            Booking declined by the host
            <% else %>
            Not confirmed - Awaiting response from <%= @booking.room.user.first_name%></p>
            <% end %>
          <p class="my-1"><strong style="color:#3F3D56;">Start Date:</strong> <%= @booking.start_date %></p>
          <p class="my-1"><strong style="color:#3F3D56;">End Date:</strong> <%= @booking.end_date %></p>
          <p class="my-1"><strong style="color:#3F3D56;">Number Of Adults:</strong> <%= @booking.number_of_adults %></p>
          <p class="my-1"><strong style="color:#3F3D56;">Number Of Children:</strong> <%= @booking.number_of_children %></p>
          <p class="my-1"><strong style="color:#3F3D56;">Number Of Infants:</strong> <%= @booking.number_of_infants %></p>
          <p class="my-1"><strong style="color:#3F3D56;">Booking made by:</strong> <%= @booking.user.first_name %> from <%= @booking.user.charity_supports.first.charity.name %></p>
          <p class="my-1"><strong style="color:#3F3D56;">Guest name:</strong> <%= @booking.guest.first_name %></p>
        <!-- </div> -->
        <p class="lead my-4" style="font-size: 1.2em;"> <%= @booking.room.description %></p>
        <div class="form-actions btn btn-secondary mb-4">
          <%= link_to "Back to dashboard", dashboard_path, class: "nav-link" %>
        </div>
      </div>
      <div class="col-12 col-lg-7">
        <div id="map" style="width: 100%; height: 300px; marker-color: red; border-top-left-radius: 15px; border-top-right-radius: 15px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        <%= cl_image_tag @booking.room.photo_url_or_default, alt: @booking.room.address, style: 'width:100%;max-height:315px;object-fit:cover;border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;' %>
      </div>
    </div>
  </div>
</div>



